#!/bin/bash
# Cloud Shell initialization script
# Executes automatically when workspace opens

set -e

# Display banner
echo "================================================================================"
echo "  Data Commons Cloud Run Deployment"
echo "================================================================================"
echo ""
echo "Repository cloned successfully."
echo "Tutorial available in the right panel."
echo ""

# Install dependencies silently in background
echo "Installing dependencies..."
pip install -r requirements.txt --quiet 2>&1 | grep -v "Requirement already satisfied" || true
echo "Dependencies installed."
echo ""

# Auto-start configuration
echo "Starting deployment configuration..."
echo ""
python setup.py
